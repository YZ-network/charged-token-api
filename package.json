{
  "name": "ct-api",
  "version": "1.0.0",
  "description": "Backend API to cache contracts data",
  "main": "src/index.ts",
  "scripts": {
    "start": "babel-node -x \".ts\" -r dotenv/config src/index.ts",
    "start:polygon": "npm start dotenv_config_path=.env.polygon",
    "update-task": "aws ecs update-service --cluster yz --service CT-api",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "contracts": "cross-env ./bin/update-contracts.sh",
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline --copy-files",
    "lint": "eslint --ext .ts --ext .js src/",
    "lint:fix": "eslint --fix --ext .ts --ext .js src/",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ynaciri/CT-api.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ynaciri/CT-api/issues"
  },
  "homepage": "https://github.com/ynaciri/CT-api#readme",
  "dependencies": {
    "csv": "^6.3.1",
    "ethers": "^5.7.2",
    "graphql": "^16.6.0",
    "graphql-http": "^1.13.0",
    "graphql-ws": "^5.11.3",
    "graphql-yoga": "^3.4.0",
    "mongoose": "^6.8.4",
    "pino": "^8.11.0",
    "ws": "^8.12.0"
  },
  "optionalDependencies": {
    "Charged-token": "github:Fintal78/Charged-token"
  },
  "devDependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.12",
    "@babel/eslint-parser": "^7.21.8",
    "@babel/node": "^7.20.7",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@graphql-yoga/render-graphiql": "^3.4.1",
    "@types/jest": "^29.5.5",
    "@types/node": "^18.13.0",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "babel-loader": "^9.1.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "eslint": "^8.51.0",
    "eslint-config-babel": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0"
  }
}
