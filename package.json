{
  "name": "ct-api",
  "version": "1.0.0",
  "description": "Backend API to cache contracts data",
  "main": "src/index.ts",
  "scripts": {
    "start": "babel-node -x \".ts\" -r dotenv/config src/index.ts",
    "start:polygon": "npm start dotenv_config_path=.env.polygon",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "contracts": "cross-env ./bin/update-contracts.sh",
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline",
    "lint": "eslint src",
    "test": "jest"
  },
  "jest": {
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ynaciri/CT-api.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ynaciri/CT-api/issues"
  },
  "homepage": "https://github.com/ynaciri/CT-api#readme",
  "dependencies": {
    "ethereumjs-tx": "^2.1.2",
    "ethers": "^5.7.2",
    "express": "^4.18.2",
    "express-graphql": "^0.12.0",
    "graphql": "^16.6.0",
    "mongoose": "^6.8.4",
    "web3": "^1.8.1"
  },
  "optionalDependencies": {
    "Charged-token": "git+ssh://git@github.com/Fintal78/Charged-token.git"
  },
  "devDependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.12",
    "@babel/node": "^7.20.7",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@types/mongoose": "^5.11.97",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^9.1.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "eslint": "^8.32.0",
    "eslint-config-babel": "^9.0.0",
    "eslint-config-prettier": "^8.6.0",
    "prettier": "^2.8.3",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0"
  }
}
